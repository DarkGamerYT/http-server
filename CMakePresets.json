{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 8,
        "patch": 0
    },
    "configurePresets": [
        {
            "hidden": true,
            "name": "default",
            "generator": "Ninja",
            "displayName": "Default Config",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/build/install"
        },

        {
            "name": "debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Publish"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Development",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "Publish",
            "configurePreset": "release",
            "configuration": "Release"
        }
    ]
}